@model HomeModel

@{
    ViewBag.Title = "Youtube2Spotify";
}

<h1>Youtube2Spotify</h1>

@if (!Model.Authenticated)
{
    <form id="authBlock" method="post" asp-action="TriggerAuth" asp-controller="Auth">
        <button type="submit">Authorize Spotify</button>
    </form>
}


@if (Model.Authenticated)
{
    <form method="get" asp-action="Index" asp-controller="Youtube2Spotify">
        <input type="text" id="youtubePlaylistID" name="youtubePlaylistID" placeholder="RDCLAK5uy_kj3rhiar1LINmyDcuFnXihEO0K1NQa2jI" />
        <button type="submit">Submit</button>
    </form>
}

